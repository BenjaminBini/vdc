---
interface Props {
  quote: string;
  attribution: string;
  bg?: 'white' | 'cream';
  iconColor?: 'terracotta' | 'sage' | 'gold';
  class?: string;
}

const {
  quote,
  attribution,
  bg = 'white',
  iconColor = 'terracotta',
  class: className = '',
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  cream: 'bg-beaucharme-cream',
};

const iconColorClasses = {
  terracotta: 'text-beaucharme-terracotta/30',
  sage: 'text-beaucharme-sage/30',
  gold: 'text-beaucharme-gold/30',
};

const attributionColorClasses = {
  terracotta: 'text-beaucharme-terracotta',
  sage: 'text-beaucharme-sage',
  gold: 'text-beaucharme-gold',
};
---

<div class:list={[
  'rounded-2xl p-8 shadow-lg flex flex-col justify-center',
  bgClasses[bg],
  className
]}>
  <svg class:list={['w-10 h-10 mb-4', iconColorClasses[iconColor]]} fill="currentColor" viewBox="0 0 24 24">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
  </svg>
  <p class="text-beaucharme-earth/80 italic text-lg">
    "{quote}"
  </p>
  <p class:list={['mt-4 text-sm font-medium', attributionColorClasses[iconColor]]}>
    â€” {attribution}
  </p>
</div>
