---
interface Props {
  title: string;
  description: string;
  iconColor?: 'sage' | 'terracotta' | 'gold' | 'white';
  variant?: 'default' | 'centered' | 'dark';
}

const {
  title,
  description,
  iconColor = 'sage',
  variant = 'default'
} = Astro.props;

const iconBgClasses = {
  sage: 'bg-beaucharme-sage/20',
  terracotta: 'bg-beaucharme-terracotta/20',
  gold: 'bg-beaucharme-gold/20',
  white: 'bg-white/20'
};

const iconColorClasses = {
  sage: 'text-beaucharme-sage',
  terracotta: 'text-beaucharme-terracotta',
  gold: 'text-beaucharme-gold',
  white: 'text-white'
};

const variantClasses = {
  default: 'bg-white rounded-sm shadow-sm p-8',
  centered: 'bg-black/20 rounded-2xl p-8 text-center',
  dark: 'text-center'
};

const titleClasses = {
  default: 'font-serif text-xl font-semibold text-beaucharme-dark mb-3',
  centered: 'font-serif text-xl font-semibold text-white mb-2',
  dark: 'font-serif text-xl font-semibold text-white mb-2'
};

const descClasses = {
  default: 'text-sm text-beaucharme-earth/80',
  centered: 'text-white',
  dark: 'text-white'
};
---

<div class:list={[variantClasses[variant], variant === 'default' && 'text-center']}>
  <div class:list={[
    "w-16 h-16 rounded-full flex items-center justify-center mb-4",
    iconBgClasses[iconColor],
    variant !== 'default' && 'mx-auto'
  ]}>
    <slot name="icon">
      <svg class:list={["w-8 h-8", iconColorClasses[iconColor]]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
      </svg>
    </slot>
  </div>
  <h3 class={titleClasses[variant]}>{title}</h3>
  <p class={descClasses[variant]}>{description}</p>
</div>
