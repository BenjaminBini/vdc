---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  id: string;
  name: string;
  price: number;
  image: ImageMetadata | string;
  category: string;
  description?: string;
  inStock?: boolean;
  badge?: string;
  featured?: boolean;
  animate?: 'fade-up' | 'fade-down' | 'fade-left' | 'fade-right' | 'zoom-in' | 'fade' | false;
}

const { id, name, price, image, category, description, inStock = true, badge, featured, animate = 'fade-up' } = Astro.props;

const isImportedImage = typeof image !== 'string';

const productData = JSON.stringify({
  id,
  name,
  price,
  image,
  category
});
---

<article class="card-product relative" data-animate={animate || undefined}>
  {!inStock && (
    <div class="absolute top-4 left-4 z-10">
      <span class="badge-out">Rupture de stock</span>
    </div>
  )}

  {badge && inStock && (
    <div class="absolute top-4 left-4 z-10">
      <span class="badge-new">{badge}</span>
    </div>
  )}

  <a href={`/boutique#${id}`} class="block">
    <!-- Image -->
    <div class="aspect-square overflow-hidden">
      {isImportedImage ? (
        <Image
          src={image as ImageMetadata}
          alt={name}
          width={400}
          height={400}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <Image
          src={image}
          alt={name}
          width={400}
          height={400}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      )}
    </div>

    <!-- Content -->
    <div class="p-6">
      <div class="text-xs tracking-widest uppercase text-beaucharme-earth mb-2 opacity-75">
        {category.replace(/-/g, ' ')}
      </div>

      <h3 class="font-serif text-xl font-semibold text-beaucharme-dark mb-2 group-hover:text-beaucharme-terracotta transition-colors duration-300">
        {name}
      </h3>

      {description && (
        <p class="text-sm text-beaucharme-earth/80 mb-4 line-clamp-2">
          {description}
        </p>
      )}

      <div class="flex items-center justify-between mt-4">
        <span class="text-2xl font-serif font-semibold text-beaucharme-dark">
          {price.toFixed(2).replace('.', ',')} â‚¬
        </span>
      </div>
    </div>
  </a>

  <!-- Add to Cart Button -->
  <div class="px-6 pb-6">
    {inStock ? (
      <button
        data-add-to-cart
        data-product={productData}
        class="w-full btn-primary text-sm py-3"
      >
        Ajouter au panier
      </button>
    ) : (
      <button
        disabled
        class="w-full bg-gray-300 text-gray-500 px-8 py-3 rounded-sm font-medium tracking-wide cursor-not-allowed text-sm"
      >
        Indisponible
      </button>
    )}
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
