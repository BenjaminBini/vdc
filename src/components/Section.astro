---
interface Props {
  bg?: 'white' | 'cream' | 'sage' | 'sage-dark' | 'terracotta' | 'dark' | 'transparent';
  card?: boolean;
  padding?: 'none' | 'small' | 'normal' | 'large';
  fullWidth?: boolean;
  animate?: 'fade-up' | 'fade-down' | 'fade-left' | 'fade-right' | 'zoom-in' | 'fade' | false;
  class?: string;
}

const {
  bg = 'white',
  card = true,
  padding = 'normal',
  fullWidth = false,
  animate = 'fade-up',
  class: className = ''
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  cream: 'bg-beaucharme-cream',
  sage: 'bg-beaucharme-sage',
  terracotta: 'bg-beaucharme-terracotta',
  dark: 'bg-beaucharme-dark',
  'sage-dark': 'bg-beaucharme-sage-dark',
  transparent: ''
};

const paddingClasses = {
  none: '',
  small: 'py-8 md:py-12',
  normal: 'section-padding',
  large: 'py-16 md:py-24'
};

const cardClasses = card ? 'rounded-2xl shadow-md' : '';
const fullWidthClasses = fullWidth ? 'relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen px-4 md:px-8 lg:px-16' : '';
---

<section
  class:list={[bgClasses[bg], cardClasses, paddingClasses[padding], fullWidthClasses, className]}
  data-animate={animate || undefined}
>
  <slot />
</section>
