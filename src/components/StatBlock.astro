---
interface Props {
  value: string;
  label: string;
  sublabel?: string;
  bg?: 'sage' | 'terracotta' | 'gold' | 'dark';
}

const {
  value,
  label,
  sublabel,
  bg = 'sage'
} = Astro.props;

const bgClasses = {
  sage: 'bg-beaucharme-sage',
  terracotta: 'bg-beaucharme-terracotta',
  gold: 'bg-beaucharme-gold',
  dark: 'bg-beaucharme-dark'
};
---

<div class:list={["rounded-2xl p-8 flex flex-col justify-center text-white shadow-lg", bgClasses[bg]]}>
  <div class="text-5xl font-bold mb-2">{value}</div>
  <p class="text-xl font-medium">{label}</p>
  {sublabel && (
    <p class="mt-3 text-white/80 text-sm">{sublabel}</p>
  )}
</div>
