---
import { Image } from 'astro:assets';
import Layout from '@layouts/Layout.astro';
import CartSidebar from '@components/CartSidebar.tsx';
import HeroCard from '@components/HeroCard.astro';
import VideoToggle from '@components/VideoToggle.tsx';

import logo from '@images/logo.png';
import produitsImg from '@images/produits.webp';
import boutiqueImg from '@images/boutique.webp';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Accueil" description="Beaucharme Cosmétique - De la graine au flacon. Cosmétiques naturels créés avec passion près de Vézelay, en Bourgogne.">
  <div class="h-screen flex flex-col overflow-auto">
    <!-- Header - Full width with contained content -->
 

    <!-- Main Grid  -->
    <main class="flex-1 min-h-0">
      <div class="h-full p-4 md:p-8">
        <div class="h-full grid lg:grid-cols-6 grid-rows-[minmax(170px,1fr)_minmax(170px,1fr)_minmax(170px,1fr)] gap-4 lg:gap-8">

        <!-- Block 1: Main Hero -->
        <HeroCard
          href={`${baseUrl}/de-la-fleur-au-flacon`}
          media="/flowers.mp4"
          mediaType="video"
          overlay
          class="col-span-full lg:col-span-4 row-span-2"
        >
          <!-- Video Toggle Button -->
          <div class="absolute top-4 left-4 z-20">
            <VideoToggle client:load />
          </div>
          <!-- Logo -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="h-4/5 w-3/5 max-w-[300px] flex items-center justify-center">
              <Image src={logo} class="max-h-full w-auto" alt="Beaucharme logo" />
            </div>
          </div>
        </HeroCard>

        <!-- Block 2: Nos Produits -->
        <HeroCard
          href={`${baseUrl}/nos-produits`}
          media={produitsImg}
          alt="Nos produits cosmétiques naturels"
          title="Nos produits"
          class="min-h-[170px] lg:col-span-2"
        />

        <!-- Block 3: Notre Boutique -->
        <HeroCard
          href={`${baseUrl}/boutique`}
          media={boutiqueImg}
          alt="Coffret cadeau élégant"
          title="Notre boutique"
          class="min-h-[170px] lg:col-span-2"
        />

        <!-- Block 4: Notre Histoire -->
        <HeroCard
          href={`${baseUrl}/notre-histoire`}
          media="/farmers.mp4"
          mediaType="video"
          title="Notre histoire"
          class="min-h-[170px] lg:col-span-2"
        />

        <!-- Block 5: Nos Valeurs -->
        <HeroCard
          href={`${baseUrl}/nos-valeurs`}
          media="/bee.mp4"
          mediaType="video"
          title="Nos valeurs"
          class="min-h-[170px] lg:col-span-2"
        />

        <!-- Block 6: Nos Fleurs -->
        <HeroCard
          href={`${baseUrl}/nos-fleurs`}
          media="/flowers-2.mp4"
          mediaType="video"
          alt="Nos fleurs cultivées en Bourgogne"
          title="Nos fleurs"
          class="min-h-[170px] lg:col-span-2"
        />

        </div>
      </div>
    </main>
  </div>

  <!-- Cart Sidebar -->
  <CartSidebar client:load />
</Layout>


