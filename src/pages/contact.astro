---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Newsletter from '@components/Newsletter.astro';
import CartSidebar from '@components/CartSidebar.tsx';
import PageContainer from '@components/PageContainer.astro';
import HeroSection from '@components/HeroSection.astro';
import Section from '@components/Section.astro';
import SectionHeader from '@components/SectionHeader.astro';
import ImageCard from '@components/ImageCard.astro';
import CheckList from '@components/CheckList.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Contact" description="Contactez Beaucharme Cosmétique. Notre ferme est située près de Vézelay en Bourgogne.">
  <PageContainer>
    <Header />

    <HeroSection
      image="/images/farm-landscape.jpg"
      alt="La ferme de Beaucharme"
      tagline="Restons en contact"
      title="Contactez-nous"
      subtitle="Une question, une envie de visiter notre ferme ? Nous sommes là pour vous"
      height="small"
    />

    <Section bg="transparent" padding="none" card={false}>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Contact Form Card -->
        <div class="bg-white rounded-2xl shadow-md p-8 md:p-10">
          <h2 class="font-serif text-3xl md:text-4xl font-bold text-beaucharme-dark mb-4">
            Envoyez-nous un message
          </h2>
          <p class="text-beaucharme-earth/80 mb-8">
            Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.
          </p>

          <form id="contact-form" class="space-y-6" onsubmit="handleContactSubmit(event)">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-beaucharme-dark mb-2">
                  Prénom <span class="text-beaucharme-terracotta">*</span>
                </label>
                <input type="text" id="firstName" name="firstName" required class="input-field" />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-beaucharme-dark mb-2">
                  Nom <span class="text-beaucharme-terracotta">*</span>
                </label>
                <input type="text" id="lastName" name="lastName" required class="input-field" />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-beaucharme-dark mb-2">
                Email <span class="text-beaucharme-terracotta">*</span>
              </label>
              <input type="email" id="email" name="email" required class="input-field" />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-beaucharme-dark mb-2">
                Téléphone
              </label>
              <input type="tel" id="phone" name="phone" class="input-field" />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-beaucharme-dark mb-2">
                Sujet <span class="text-beaucharme-terracotta">*</span>
              </label>
              <select id="subject" name="subject" required class="input-field">
                <option value="">Sélectionnez un sujet</option>
                <option value="commande">Question sur une commande</option>
                <option value="produit">Information produit</option>
                <option value="visite">Visite de la ferme</option>
                <option value="partenariat">Partenariat</option>
                <option value="autre">Autre</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-beaucharme-dark mb-2">
                Message <span class="text-beaucharme-terracotta">*</span>
              </label>
              <textarea id="message" name="message" rows="6" required class="input-field resize-none"></textarea>
            </div>

            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="mt-1 w-4 h-4 text-beaucharme-terracotta border-beaucharme-beige rounded focus:ring-beaucharme-sage"
              />
              <label for="consent" class="text-sm text-beaucharme-earth/80">
                J'accepte que mes données soient utilisées pour me recontacter concernant ma demande.
                <span class="text-beaucharme-terracotta">*</span>
              </label>
            </div>

            <button type="submit" class="btn-primary w-full md:w-auto">
              Envoyer le message
            </button>
          </form>
        </div>

        <!-- Contact Info Card -->
        <div class="bg-white rounded-2xl shadow-md p-8 md:p-10 flex flex-col">
          <h2 class="font-serif text-3xl md:text-4xl font-bold text-beaucharme-dark mb-8">
            Nos coordonnées
          </h2>

          <div class="space-y-6 flex-grow">
            <!-- Adresse -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-full bg-beaucharme-sage/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-beaucharme-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-serif text-xl font-semibold text-beaucharme-dark mb-2">Adresse</h3>
                <address class="not-italic text-beaucharme-earth/80">
                  La Ferme de Beaucharme<br/>
                  Près de Vézelay<br/>
                  89450 Bourgogne<br/>
                  France
                </address>
              </div>
            </div>

            <!-- Téléphone -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-full bg-beaucharme-terracotta/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-beaucharme-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-serif text-xl font-semibold text-beaucharme-dark mb-2">Téléphone</h3>
                <p class="text-beaucharme-earth/80">
                  <a href="tel:+33123456789" class="hover:text-beaucharme-terracotta transition-colors duration-300">
                    +33 1 23 45 67 89
                  </a>
                </p>
                <p class="text-sm text-beaucharme-earth/60 mt-1">
                  Du lundi au vendredi, 9h - 12h / 14h - 18h
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 rounded-full bg-beaucharme-gold/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-beaucharme-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-serif text-xl font-semibold text-beaucharme-dark mb-2">Email</h3>
                <p class="text-beaucharme-earth/80">
                  <a href="mailto:contact@beaucharme.fr" class="hover:text-beaucharme-terracotta transition-colors duration-300">
                    contact@beaucharme.fr
                  </a>
                </p>
                <p class="text-sm text-beaucharme-earth/60 mt-1">
                  Nous répondons sous 24h
                </p>
              </div>
            </div>
          </div>

          <!-- Réseaux sociaux -->
          <div class="mt-8 pt-8 border-t border-beaucharme-beige/50">
            <h3 class="font-serif text-xl font-semibold text-beaucharme-dark mb-4">Suivez-nous</h3>
            <div class="flex space-x-4">
              <a
                href="#"
                class="w-12 h-12 rounded-full bg-beaucharme-dark hover:bg-beaucharme-terracotta text-white flex items-center justify-center transition-all duration-300 hover:scale-110"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a
                href="#"
                class="w-12 h-12 rounded-full bg-beaucharme-dark hover:bg-beaucharme-terracotta text-white flex items-center justify-center transition-all duration-300 hover:scale-110"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- Visit Section -->
    <Section bg="transparent" card={false} padding="normal">
      <div class="container-custom">
        <SectionHeader
          tagline="Venez nous rencontrer"
          title="Visitez notre ferme"
        />

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <ImageCard
            image="/images/farm-landscape.jpg"
            alt="La ferme de Beaucharme"
            class="md:col-span-2 h-72 md:h-80"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-beaucharme-dark/70 to-transparent"></div>
            <div class="absolute inset-0 p-8 flex flex-col justify-center text-white">
              <h3 class="font-serif text-2xl md:text-3xl font-semibold max-w-sm">Une immersion authentique</h3>
              <p class="text-white/80 mt-3 max-w-md">Découvrez nos cultures, notre alambic et notre atelier de fabrication.</p>
            </div>
          </ImageCard>

          <div class="bg-beaucharme-terracotta rounded-2xl p-8 flex flex-col justify-center text-white shadow-lg">
            <div class="w-14 h-14 rounded-full bg-white/20 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h4 class="font-serif text-xl font-semibold mb-2">Sur rendez-vous</h4>
            <p class="text-white/80 text-sm mb-5">Nous vous accueillons toute l'année sur rendez-vous pour une visite personnalisée.</p>
            <a href="#contact-form" class="inline-block bg-white text-beaucharme-terracotta px-6 py-2.5 rounded-full font-medium text-sm hover:bg-beaucharme-cream transition-colors w-fit">
              Réserver une visite
            </a>
          </div>

          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <h4 class="font-serif text-lg font-semibold text-beaucharme-dark mb-4">Ce que vous découvrirez</h4>
            <CheckList items={["Les champs de plantes rares", "Notre alambic en cuivre", "L'atelier de formulation"]} />
          </div>

          <div class="bg-beaucharme-gold rounded-2xl p-6 shadow-lg text-white flex flex-col justify-center items-center text-center">
            <div class="text-4xl font-bold mb-1">2h</div>
            <p class="text-white/80 text-sm">Durée moyenne de la visite</p>
          </div>

          <div class="bg-beaucharme-cream rounded-2xl p-6 shadow-lg flex flex-col justify-center">
            <h4 class="font-serif text-lg font-semibold text-beaucharme-dark mb-2">Envie de découvrir nos produits ?</h4>
            <p class="text-sm text-beaucharme-earth/70 mb-4">Explorez notre boutique en ligne et recevez vos cosmétiques naturels directement chez vous.</p>
            <a href={`${baseUrl}/boutique`} class="text-beaucharme-terracotta font-medium text-sm hover:underline inline-flex items-center">
              Voir la boutique
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </Section>

    <Newsletter />
    <Footer />
    <CartSidebar client:load />
  </PageContainer>
</Layout>

<script is:inline>
  window.handleContactSubmit = function(event) {
    event.preventDefault();
    const form = event.target;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    console.log('Form data:', data);

    alert(`Merci ${data.firstName} ${data.lastName} ! Votre message a bien été envoyé. Nous vous répondrons dans les plus brefs délais. (Interface de démonstration)`);

    form.reset();
  }
</script>
